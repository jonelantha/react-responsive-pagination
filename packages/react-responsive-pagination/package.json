{
  "name": "react-responsive-pagination",
  "version": "1.8.0",
  "description": "React component for responsive pagination",
  "author": "jonelantha",
  "license": "MIT",
  "repository": "github:jonelantha/react-responsive-pagination",
  "homepage": "https://react-responsive-pagination.elantha.com",
  "main": "lib.cjs/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "tsc-commonjs": "rimraf lib.cjs/ && tsc --project ./tsconfig/commonjs.json",
    "tsc-esnext": "rimraf lib/ && tsc --project ./tsconfig/esnext.json",
    "build": "yarn lint && yarn tsc-commonjs && yarn tsc-esnext",
    "start": "rimraf lib/ && tsc --project ./tsconfig/dev.json --watch",
    "test": "jest",
    "lint": "eslint --ext .ts --ext .tsx src",
    "prepublishOnly": "yarn build",
    "release": "rm ../../package.json && semantic-release",
    "previewReleaseNotes": "rm ../../package.json && semantic-release --dry-run"
  },
  "keywords": [
    "responsive",
    "pagination",
    "react pagination",
    "responsive pagination",
    "react",
    "reactjs",
    "react-component",
    "bootstrap",
    "react bootstrap pagination"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.1.1",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.24.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "ts-jest": "29.0.3",
    "typescript": "^4.8.2"
  }
}

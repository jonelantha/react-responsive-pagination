---
export interface Props {
  striped?: boolean;
}

const { striped } = Astro.props;
---

<div class:list={[{ striped }]}>
  <slot />
</div>

<style lang="scss">
  @use '@styles/_vars.scss';

  div {
    margin-block-end: vars.$leading;
    padding-block: 1rem;

    border: var(--box-border);
    border-radius: vars.$border-radius;

    box-shadow: var(--code-box-shadow);

    &.striped {
      background: repeating-linear-gradient(
        135deg,
        #eeeeee,
        #eeeeee 10px,
        #ffffff 10px,
        #ffffff 20px
      );

      @media (prefers-color-scheme: dark) {
        background: repeating-linear-gradient(
          135deg,
          #222222,
          #222222 10px,
          #1b1b1d 10px,
          #1b1b1d 20px
        );
      }
    }
  }
</style>

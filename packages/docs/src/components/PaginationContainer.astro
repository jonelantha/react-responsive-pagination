---
export interface Props {
  class?: string;
  hasBorder?: boolean;
  striped?: boolean;
  shadow?: boolean;
  inlinePadding?: boolean;
  noBottomMargin?: boolean;
}

const {
  class: className,
  hasBorder,
  striped,
  shadow,
  inlinePadding,
  noBottomMargin,
} = Astro.props;
---

<div
  class:list={[
    className,
    'container',
    { hasBorder, inlinePadding, striped, shadow, noBottomMargin },
  ]}
>
  <slot />
</div>

<style lang="scss">
  @use '@styles/_vars.scss';

  div.container {
    margin-block-end: vars.$leading;

    &.hasBorder {
      border: var(--box-border);
      border-radius: vars.$border-radius;

      padding-block: 1rem;

      &.inlinePadding {
        padding-inline: 1rem;
      }
    }

    &.noBottomMargin {
      margin-block-end: 0;
    }

    &.striped {
      background: repeating-linear-gradient(
        135deg,
        #eeeeee,
        #eeeeee 10px,
        #ffffff 10px,
        #ffffff 20px
      );
    }

    &.shadow {
      box-shadow: var(--box-shadow);
    }
  }
</style>

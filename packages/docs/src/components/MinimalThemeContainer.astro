---
import PaginationContainer from './PaginationContainer.astro';
import type { Props as PaginationContainerProps } from './PaginationContainer.astro';

type Props = PaginationContainerProps;

const props = Astro.props;
---

<PaginationContainer class="minimal-styles" {...props}>
  <slot />
</PaginationContainer>

<style is:global lang="scss">
  @use 'sass:meta';

  .minimal-styles {
    @include meta.load-css('react-responsive-pagination/themes/minimal-light-dark');
  }
</style>

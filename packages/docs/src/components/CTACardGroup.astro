<ul class="cta-card-group">
  <slot />
</ul>

<script>
  function setup() {
    document.querySelectorAll<HTMLUListElement>('.cta-card-group').forEach(group => {
      if (group.dataset.isSetup === 'true') return;

      group.dataset.isSetup = 'true';

      group.addEventListener('focusin', ({ target }) => {
        if (!(target instanceof HTMLElement)) return;

        const item = target.closest('li');

        if (!item || !group.contains(item)) return;

        item.scrollIntoView({ behavior: 'auto', inline: 'nearest' });
      });
    });
  }

  document.addEventListener('astro:page-load', setup);
</script>

<style lang="scss">
  @use '@styles/_vars.scss';

  ul {
    list-style: none;
    margin: 0;
    padding-inline: vars.$landing-padding-inline;
    padding-block: var(--v-spacing) calc(var(--v-spacing) - 10px);
    border-block-end: 10px solid transparent;
    display: grid;

    gap: 16px;
    grid-template-columns: 1fr;

    @media (min-width: 28rem) {
      grid-template-columns: 1fr 1fr;
    }

    @media (min-width: 47rem) {
      grid-template-columns: repeat(4, minmax(12.5rem, 1fr));
      overflow-x: scroll;

      @media (prefers-reduced-motion: no-preference) {
        scroll-behavior: smooth;
      }
    }
  }
</style>

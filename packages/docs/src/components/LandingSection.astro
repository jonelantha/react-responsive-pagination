---
import BreakableLines from './BreakableLines.astro';

type Props = {
  title: string | string[];
  hasBackground?: boolean;
  anchorId?: string;
};

const { title, hasBackground, anchorId } = Astro.props;
---

<section
  class:list={{
    'has-background': hasBackground,
  }}
>
  <h2 id={anchorId}><BreakableLines content={title} /></h2>
  <slot />
</section>

<style lang="scss">
  @use '@styles/_vars.scss';

  section {
    --v-spacing: 2rem;

    padding-block-start: var(--v-spacing);

    @media screen and (max-width: vars.$landing-reduced-margins-breakpoint) {
      --v-spacing: 1.5rem;
    }

    &.has-background {
      background:
        radial-gradient(at 10% 10%, rgba(102, 51, 153, 0.3) 0px, transparent 50%),
        radial-gradient(at 10% 90%, rgba(13, 109, 253, 0.3) 0px, transparent 50%),
        radial-gradient(at 90% 10%, rgba(13, 109, 253, 0.3) 0px, transparent 50%),
        radial-gradient(at 90% 90%, rgba(102, 51, 153, 0.3) 0px, transparent 50%);
    }
  }

  h2 {
    margin: 0;
    text-align: center;

    @media screen and (max-width: 35rem) {
      font-size: 1.5rem;
    }
  }
</style>

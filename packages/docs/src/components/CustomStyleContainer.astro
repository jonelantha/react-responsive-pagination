---
import PaginationContainer from './PaginationContainer.astro';
import type { Props as PaginationContainerProps } from './PaginationContainer.astro';

type Props = PaginationContainerProps;

const props = Astro.props;
---

<PaginationContainer class="custom-styles" {...props}>
  <slot />
</PaginationContainer>

<style is:global lang="scss">
  @use 'sass:meta';

  .custom-styles {
    @include meta.load-css('@styles/customStyles');
  }
</style>

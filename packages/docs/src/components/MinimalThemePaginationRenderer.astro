---
import PaginationRenderer, { type PaginationRendererProps } from './PaginationRenderer';

type Props = PaginationRendererProps;

const { ...rest } = Astro.props;
---

<PaginationRenderer {...rest} className="minimal-styles" client:load />

<style is:global lang="scss">
  @use 'sass:meta';

  .minimal-styles {
    @include meta.load-css('react-responsive-pagination/themes/minimal-light-dark');
  }
</style>

---
import ClassicThemePaginationRenderer from '@components/ClassicThemePaginationRenderer.astro';
import BootstrapThemePaginationRenderer from '@components/BootstrapThemePaginationRenderer.astro';
import MinimalThemePaginationRenderer from '@components/MinimalThemePaginationRenderer.astro';

const { ...rest } = Astro.props;
---

<div class="outer" {...rest} inert>
  <div class="inner">
    <BootstrapThemePaginationRenderer initialPage={1} total={5} />
    <MinimalThemePaginationRenderer initialPage={8} total={10} />
    <ClassicThemePaginationRenderer initialPage={5} total={5} />
  </div>
</div>

<style lang="scss">
  @use '@styles/_vars.scss';

  .outer {
    display: inline-block;
    position: relative;
    width: 100%;
    overflow: hidden;
    pointer-events: none;

    mask:
      linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 1) 10%,
        rgba(0, 0, 0, 1) 90%,
        rgba(0, 0, 0, 0) 100%
      ),
      linear-gradient(
        to left,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 1) 10%,
        rgba(0, 0, 0, 1) 90%,
        rgba(0, 0, 0, 0) 100%
      );
    mask-composite: intersect;
  }

  .inner {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 5px;
    inline-size: 325px;
    margin-left: 50%;
    transform: translate(-50%, 0) rotate(-10deg);
  }
</style>

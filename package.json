{
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "type": "module",
  "scripts": {
    "start": "npm run start -w react-responsive-pagination",
    "build": "npm run build -w react-responsive-pagination",
    "release": "npm run release -w react-responsive-pagination",
    "test": "npm run test -w react-responsive-pagination",
    "integration-test": "npm run test -w integration-test",
    "start-test-harness": "npm run start -w test-harness-react-19",
    "browser-test-dev": "npm run test-dev-chrome -w browser-test",
    "browser-test-19": "npm run build -w test-harness-react-19 && SERVE_COMMAND='npm run preview -w test-harness-react-19' PORT=3000 npm run test-prod -w browser-test",
    "browser-test-18": "npm run build -w test-harness-react-18 && SERVE_COMMAND='npm run preview -w test-harness-react-18' PORT=3000 npm run test-prod -w browser-test",
    "browser-test-17": "npm run build -w test-harness-react-17 && SERVE_COMMAND='npm run preview -w test-harness-react-17' PORT=3000 npm run test-prod -w browser-test",
    "start-docs": "npm run dev -w docs",
    "build-docs": "npm run build -w docs",
    "tsc": "npm run tsc-config && npm run tsc --workspaces",
    "tsc-config": "tsc --p ./tsconfig/tsconfig.config-files.json",
    "lint": "npm run lint --workspaces"
  },
  "dependencies": {
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.1",
    "bootstrap": "5.3.8",
    "eslint": "9.39.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "formik": "2.4.9",
    "prettier": "3.7.4",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-responsive-pagination": "file:./packages/react-responsive-pagination",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "vite": "7.2.6"
  }
}
